<!DOCTYPE html>
<html lang="en">
<head>
  <title>Car Rental</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .container-fluid {
        background-color: bisque;
    }
    .button-container {
        margin-top: 20px;
    }
    .card-img-top {
      height: 250px; /* Adjust as necessary */
      object-fit: cover;
    }
    .card-body {
      height: 150px; /* Adjust as necessary */
    }
    .carousel-item {
      height: 300px; /* Set the desired height for the carousel items */
    }
    .carousel-item img {
      height: 100%;
      width: 100%;
      object-fit: cover;
    }
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
      background-color: green; /* Maintain the green color for consistency */
    }
    .card {
      margin-bottom: 20px;
    }
    .card-body {
      text-align: center;
    }
    .card-title {
      font-size: 1.25rem;
      margin-bottom: 10px;
    }
    .btn {
      margin-top: 10px;
    }

    .account {
      margin-left: 900px;
    }
</style>
</head>
<body style='background-color: #f0dda1;'>
  <%- include('partials/navbar.ejs') %>

  <div class="container my-5">
    <div class="text-center mb-4">
      <h2>Products from Car Rental Database</h2>
    </div>

    <div id="Cars" class="carousel slide mb-5" data-bs-ride="carousel">
      <!-- Indicators/dots -->
      <div class="carousel-indicators">
        <% car_rental.forEach((car, index) => { %>
          <button type="button" data-bs-target="#Cars" data-bs-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>"></button>
        <% }); %>
      </div>
      
      <!-- The slideshow/carousel -->
      <div class="carousel-inner">
        <% car_rental.forEach((car, index) => { %>
          <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
            <img src="/images/<%= car.image %>" alt="<%= car.CarName %>" class="d-block mx-auto" style="width:50%;">
            <div class="carousel-caption d-none d-md-block">
              <h5><%= car.CarName %></h5>
            </div>
          </div>
        <% }); %>
      </div>
    
      <!-- Left and right controls/icons -->
      <button class="carousel-control-prev" type="button" data-bs-target="#Cars" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#Cars" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
      </button>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Car Name</th>
          <th>Availability</th>
          <th>Price</th>
          <th>Actions</th>
          <th>Image</th>
        </tr>
      </thead>
      <tbody>
        <% car_rental.forEach(car => { %>
          <tr>
            <td><%= car.CarName %></td>
            <td><%= car.availability %></td>
            <td>$<%= car.Price.toFixed(2) %></td>
            <td>
              <a href="/product/<%= car.carID %>" class="btn btn-primary">View Car</a>
              <a href="/rental/<%= car.carID %>" class="btn btn-success">Rent</a>
            </td>
            <td><img src="/images/<%= car.image %>" alt="<%= car.CarName %>" class="img-thumbnail" style="width: 150px; height: auto;"></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
